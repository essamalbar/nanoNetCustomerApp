<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTV"
            style="@style/AppHeadText"
            android:layout_height="@dimen/mini_logo"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plansLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_apps" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/plans" />

    </LinearLayout>

    <RelativeLayout style="@style/NavDividers" />

    <LinearLayout
        android:id="@+id/servicesLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_extension" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/services" />

    </LinearLayout>

    <RelativeLayout style="@style/NavDividers" />

    <LinearLayout
        android:id="@+id/alertsLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_notifications_active" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/alerts" />

    </LinearLayout>

    <RelativeLayout style="@style/NavDividers" />

    <LinearLayout
        android:id="@+id/logsLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_history" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/log" />

    </LinearLayout>

    <RelativeLayout style="@style/NavDividers" />

    <LinearLayout
        android:id="@+id/ticketsLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_question_answer" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/tickets" />

    </LinearLayout>

    <RelativeLayout style="@style/NavDividers" />

    <LinearLayout
        android:id="@+id/logoutLL"
        style="@style/navLinearLayout"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/NavIcons"
            android:src="@drawable/ic_round_exit_to_app" />

        <TextView
            style="@style/AppTextNav"
            android:text="@string/logout" />

    </LinearLayout>

</LinearLayout>